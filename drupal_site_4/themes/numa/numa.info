name = Numa
description = A custom Drupal theme for the LA Aqueduct Digital Platform. Designed and built by Bluespark, based on the Omega theme framework. The Native Americans that lived in the Los Angeles area called themselves Numa.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; Stylesheets
stylesheets[all][] = icons/style.css
stylesheets[all][] = css/numa.normalize.css
stylesheets[all][] = css/numa.hacks.css
stylesheets[all][] = css/numa.styles.css
stylesheets[all][] = css/numa.no-query.css


; Scripts
scripts[] = js/numa.behaviors.js

; Regions
regions[header] = Header
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[footer_first]   = Footer First
regions[footer_second]  = Footer Second

; Layout Settings
layout[hero][stylesheets][all][] = css/layouts/site/site.layout.css

; Plugins
plugins[panels][layouts] = panels/layouts
;plugins[panels][styles] = panels/styles

